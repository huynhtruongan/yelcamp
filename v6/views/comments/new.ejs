<% include ../partials/header %>

<section class="section-new">
    <div class="row">
        <div class="new">
            <div class="new__form">
                <h1 class="heading-secondary ">Create a New Campground <%= campground.name%></h1>
                <form action="/campgrounds/<%= campground._id%>/comments" method="POST" class="form">
                    <div class="form__group">
                        <input type="text" name="comment[text]" placeholder="text" class="form__input" id="text" required>
                        <label for="text" class="form__label">Text</label>
                    </div>
                    <div class="form__group">
                        <input type="text" name="comment[author]" placeholder="author" class="form__input" id="author" required>
                        <label for="author" class="form__label">Author</label> 
                    </div>
                    <button class=" btn-primary btn-submit btn-animated">Submit!</button>
                </form>
            </div>
        </div>
    </div>
</section>


<% include ../partials/footer %>
