<% include ../partials/header %>

<div class="container">

    <header class="jumbotron">
        <h1>Welcome To YelpCamp!</h1>
        <p>View our hand-picked campgrounds fromm all over the world!</p>
        <p>
            <a href="/campgrounds/new" class="btn btn-white btn-animated">Add New Campgrounds</a>
        </p>
    </header>
    <div class="row">
        <% campgrounds.forEach((campground)=>{%>
            <div class="col-1-of-3">
                <div >
                    <img src="<%=campground.image%>"></img>
                </div>
                <h4><%= campground.name %></h4>
                <p><a href="/campgrounds/<%= campground._id %>"> More Info</a></p>
            </div>
        <% }) %>
    </div>
    
</div>
<% include ../partials/footer %>